<h1>
  <%= @username %>
  <%= link_to octicon('mark-github', height: 26), "https://github.com/#{@username}", target: :_blank %>
</h1>

<ul class="nav nav-tabs mb-3">
  <li class="nav-item">
    <a class="nav-link <%= 'active' if params[:tab].blank? || params[:tab] == 'events' %>" href="<%= url_for(request.params.merge(tab: 'events')) %>">
      Events
      <span class='badge badge-secondary'><%= @events.count %></span>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= 'active' if params[:tab] == 'repos' %>" href="<%= url_for(request.params.merge(tab: 'repos')) %>">
      Repos
      <span class='badge badge-secondary'><%= 0 %></span>
    </a>
  </li>
</ul>

<% if @events.any? %>
  <div class="mb-3">
    <%= line_chart @events.group_by_day(:created_at).count, colors: ['#bbb'], height: "80px", library: { scales: { yAxes: [{ display: false }], xAxes: [{ display: false }] }}, points: false %>
  </div>
  <%= render @events %>
<% else %>
  <p>No events found.</p>
<% end %>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

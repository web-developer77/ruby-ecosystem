                <h3>
                  <%= number_to_human Repository.internal.count %>
                </h3>
                <span>Repositories</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm mb-3">
        <div class="card-content">
          <div class="card-body">
            <div class="media d-flex">

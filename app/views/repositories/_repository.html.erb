<div class="card mb-3">
  <div class="card-body">
    <%= link_to "https://github.com/#{repository.org}", target: :_blank, class: 'float-right' do %>
      <img src="https://github.com/<%= repository.org %>.png" class="rounded" height='40' width='40'>
    <% end %>
    <h5 class="card-title mb-0">
      <span class='mr-1' style='color: <%= repository.color %>;' title='<%= repository.language %>'>
        <%= octicon(repo_icon(repository), height: 18) %>
      </span>

      <%= link_to repository.full_name, repository %>
      <% if repository.topics %>
        <small><% repository.topics.each do |t| %> <a class="badge badge-info" href='<%= url_for(request.params.merge(topic: t)) %>'><%= t  %></a> <% end %></small>
      <% end %>
    </h5>
    <small class='text-muted'>
      <%= repository.description %>
      <div class="row">
        <div class="col-md-2">
          Pushed: <%= distance_of_time_in_words_to_now repository.pushed_at %> ago
        </div>
        <div class="col-md-2">
          Stars: <%= number_to_human repository.stargazers_count %>
        </div>
        <div class="col-md-2">
          Forks: <%= number_to_human repository.forks_count %>
        </div>
        <div class="col-md-2">
          Ecosystem Score: <%= repository.score %>
        </div>
        <div class="col-md-2">
          Internal Deps: <%= repository.internal_package_dependency_ids.length %>
        </div>
      </div>
    </small>
  </div>
</div>

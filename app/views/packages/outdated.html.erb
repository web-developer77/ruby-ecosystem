<h1>Outdated packages</h1>

<table class='table text-center'>
  <tr>
    <th class="text-left">
      Org
    </th>
    <th class="text-left">
      PM
    </th>
    <th class="text-left">
      Package Name
    </th>
    <th>
      Last release
    </th>
    <th>
      Collabs Usage
    </th>
    <th>
      % outdated
    </th>
  </tr>

  <% @packages.each do |package| %>
      <tr>
        <td>
          <% if package.repository %>
            <%= link_to "https://github.com/#{package.repository.org}", title: package.repository.org, target: :_blank, class: 'float-left mr-2' do %>
              <img src="https://github.com/<%= package.repository.org %>.png" class="rounded" height='20' width='20'>
            <% end %>
          <% end %>
        </td>
        <td class="text-left">
          <%= package.platform_name %>
        </td>
        <td class="text-left">
          <%= link_to package.name, package_path(id: package.id) %>
          <small class='text-muted'><%= package.latest_stable_release_number %></small>
        </td>
        <td>
          <%= distance_of_time_in_words_to_now package.latest_release_published_at %> ago
        </td>
        <td>
          <%= package.collab_dependent_repos_count %>
        </td>
        <td>
          <%= package.outdated %>%
        </td>
      </tr>
  <% end %>
</table>

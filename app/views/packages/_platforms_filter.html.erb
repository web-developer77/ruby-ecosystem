<li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle <%= 'active' if (params[:platform].present? || params[:exclude_platform].present?) %>" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Platform</a>
  <div class="dropdown-menu">
    <% if params[:platform].present? %>
      <a class="dropdown-item active" title='Click to Remove' href="<%= url_for(request.params.merge(page: nil, platform: nil)) %>">
        <%= params[:platform] %>
      </a>
    <% end %>
    <% if params[:exclude_platform].present? %>
      <a class="dropdown-item active" title='Click to Remove' href="<%= url_for(request.params.merge(page: nil, exclude_platform: nil)) %>">
        Excluding: <%= params[:exclude_platform] %>
      </a>
    <% end %>
    <% @platforms.sort_by(&:last).reverse.reject{|r| r[0].blank? }.each do |platform,count| %>
      <% unless platform == params[:platform] %>
        <a class="dropdown-item" data-alt="<%= url_for(request.params.merge(page: nil, exclude_platform: platform)) %>"  href="<%= url_for(request.params.merge(page: nil, platform: platform)) %>"
          title="cmd+click to exclude <%= platform %>">
          <%= platform %>
          <small class='text-muted'>
            <%= number_with_delimiter count %>
          </small>
        </a>
      <% end %>
    <% end %>
  </div>
</li>

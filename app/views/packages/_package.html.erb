<div class="card mb-3">
  <div class="card-body">
    <% if package.repository %>
      <%= link_to "https://github.com/#{package.repository.org}", target: :_blank, class: 'float-right' do %>
        <img src="https://github.com/<%= package.repository.org %>.png" class="rounded" height='40' width='40'>
      <% end %>
    <% end %>
    <h5 class="card-title mb-0">
      <%= link_to "#{package.platform.downcase}/#{package.name}", package_path(package.id) %>
      <small class='text-muted'><%= package.latest_release_number %></small>
    </h5>

    <% if package.description.present? %>
      <%= package.description %>
      <br/>
    <% end %>
    <small class='text-muted'>
      <% if package.repository %>
        Repository: <%= link_to package.repository.html_url, package.repository.html_url, target: :_blank %><br/>
      <% elsif package.repository_url.present? %>
        Repository: <%= link_to package.repository_url, package.repository_url, target: :_blank %><br/>
      <% end %>
      Latest release: <%= time_ago_in_words package.latest_release_published_at %><br/>
      Dependent collab repositories: <%= package.collab_dependent_repos_count || 0 %>
    </small>
  </div>
</div>
